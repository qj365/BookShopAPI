@model IEnumerable<BookShopAPI.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sách</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>



<section class="content">
    <div class="container-fluid">

        <!-- Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">

                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <a href="./Book/Create" class="btn btn-primary">
                                    Thêm mới
                                </a>
                            </div>
                        </div>


                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Tên sách
                                    </th>
                                    <th>
                                        Ảnh bìa
                                    </th>

                                    <th>
                                        Giá
                                    </th>
                                    <th>
                                        Giảm giá
                                    </th>
                                    <th>
                                        Số lượng
                                    </th>

                                    <th>
                                        Tác giả
                                    </th>
                                    <th>
                                        Thể loại
                                    </th>
                                    <th>
                                        Nhà xuất bản
                                    </th>

                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            
                            


                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>

<script>
    $(function () {
        const table = $("#example1").DataTable({
            ajax: {
                url: "/api/book",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name"
                },
                {
                    data: "photo",
                    render: function (data) {
                        return `<img width="100px" src="/Areas/Admin/Data/BookImage/${data}"/>`
                    }
                },
                {
                    data: "price",
                    render: function (data, type, row) {                        
                        const p = row.discount > 0 ? data * (100 - row.discount) / 100 : data
                        const n = `<p>${p}</p>`
                        const y = `<p style="text-decoration: line-through">${data}</p>${n}`

                        const price = row.discount > 0 ? y : n
                        return price
                    }
                },
                {
                    data: "discount",
                    visible: false
                },
                {
                    data: "amount"
                },
                {
                    data: "author.name"
                },
                {
                    data: "category.name"
                },
                {
                    data: "publisher.name"
                },
                {
                    data: "id",
                    render: function (data) {
                        const attr = `<a class="btn-edit" href="/Admin/Book/Edit/${data}"> <i class="far fa-edit icon-edit"></i> </a>
                                    <a class="js-delete" data-id="${data}" href="#"> <i class="far fa-trash-alt icon-delete"></i> </a>`

                        return attr;
                    }
                }
            ]
        });

        $("#example1").on("click", ".js-delete", function (event) {
            var button = $(this);
            event.preventDefault();

            bootbox.confirm("Bạn chắc chắn muốn xoá mục này?", function (r) {
                if (r) {
                    $.ajax({
                        url: "/api/book/" + button.attr("data-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw()
                        }
                    })
                }
            })


        });
    });
</script>
