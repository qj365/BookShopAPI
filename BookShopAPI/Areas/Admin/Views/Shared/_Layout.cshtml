<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản lý bán sách</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/fontawesome-free/css/all.min.css">

    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/summernote/summernote-bs4.min.css">

    <link href="~/Areas/Admin/Data/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />


    <!-- DataTables -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <!-- Select2 -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Data/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

    <link href="~/Areas/Admin/Data/plugins/toastr/toastr.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/Data/dist/css/adminlte.min.css">


    @Scripts.Render("~/bundles/adminlte")

    @Scripts.Render("~/bundles/jqueryval")



    <style>

        .label-form {
            margin-left: 5px;
            font-weight: 400 !important;
        }

        #reason-error, #textOther-error {
            color: red;
        }

        .warning-user {
            color: red;
            position: relative;
            bottom: 8px;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/Dashboard" class="nav-link">Home</a>
                </li>

            </ul>
            

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">

                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- Messages Dropdown Menu -->

                <!-- Notifications Dropdown Menu -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Areas/Admin/Data/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AdminLTE 3</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Areas/Admin/Data/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Xin chào, @User.Identity.Name</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="~/Admin/Dashboard" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Tổng quan
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Order" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Order" ? "active" : "")">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Đơn hàng
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Book" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Book" ? "active" : "")">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Sách
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Author" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Author" ? "active" : "")">
                                <i class="nav-icon fas fa-pen"></i>
                                <p>
                                    Tác giả
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Category" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")">
                                <i class="nav-icon far fa-list-alt"></i>
                                <p>
                                    Thể loại
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Publisher" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Publisher" ? "active" : "")">
                                <i class="nav-icon fas fa-parachute-box"></i>
                                <p>
                                    Nhà xuất bản
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/Voucher" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Voucher" ? "active" : "")">
                                <i class="nav-icon fas fa-percent"></i>
                                <p>
                                    Voucher
                                </p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="~/Admin/Customer" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Customer" ? "active" : "")">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Khách hàng
                                </p>
                            </a>
                        </li>



                        @{string classTreeManage = "";
                            string classActiveManage = "";
                        }
                        @if (ViewContext.RouteData.Values["Controller"].ToString() == "Manage")
                        {
                            classTreeManage = "menu-is-opening menu-open";
                            classActiveManage = "active";
                        }
                        <li class="nav-item @classTreeManage">
                            <a href="#" class="nav-link @classActiveManage">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>
                                    Tài khoản
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="~/Admin/Manage/ChangePassword" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ChangePassword" ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>

                                        <p>
                                            Đổi mật khẩu
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Admin/Manage/AddPhoneNumber" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "AddPhoneNumber" ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đổi SĐT</p>
                                    </a>
                                </li>
                            </ul>
                        </li>


                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav-item" }))
                        {
                            @Html.AntiForgeryToken()
                            <li class="nav-item">
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">
                                    <i class="nav-icon fas fa-sign-out-alt"></i>
                                    <p>
                                        Đăng xuất
                                    </p>
                                </a>
                            </li>
                        }


                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.1.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    


</body>
</html>